<h1>トップページ</h1>

<% if user_signed_in? && current_user.admin? %>
  <div class="my-3">
    <%= link_to "新規投稿", new_post_path %>
  </div>
<% end %>


<% if user_signed_in? %>
  <div class="my-3">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: "本当にログアウトしますか？" } %>
  </div>
<% else %>
  <div class="my-3">
    <%= link_to "新規登録", new_user_registration_path %>
    <%= link_to "ログイン", new_user_session_path %>
  </div>
<% end %>

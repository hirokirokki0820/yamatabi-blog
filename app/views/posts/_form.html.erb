<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.label :title, for: "postTitleInput", class: "form-label" %>
    <%= form.text_field :title, class: "form-control", id: "postTitleInput" %>
  </div>

  <div class="my-3">
    <%= form.label :content, for: "postContentInput" %>
    <%= form.text_area :content, class: "form-control", id: "postContentInput" %>
  </div>

  <div class="my-3">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>
